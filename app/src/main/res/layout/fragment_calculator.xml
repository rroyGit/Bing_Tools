<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1"
    android:background="@color/darkGray2"
    android:orientation="vertical"
    android:id="@+id/calculator_frag"
    android:focusableInTouchMode="true"
    tools:context="com.rroycsdev.bingtools.CalculatorFragment">

    <ScrollView
        android:id="@+id/scrollViewCalculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/textResult"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"

                android:background="@drawable/round_layout"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp">

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/resultB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:hint="@string/Result"
                        android:textColor="?android:attr/textColorHint"
                        android:textColorHint="@color/red"
                        android:textSize="40sp" />
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/editTexts"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textResult">

                <EditText
                    android:id="@+id/num1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"

                    android:background="@drawable/custom_edit_text"
                    android:hint="@string/zero"
                    android:inputType="numberDecimal"
                    android:nextFocusLeft="@id/num1"
                    android:nextFocusUp="@id/num1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/red"
                    android:textCursorDrawable="@drawable/edit_text_pipe_color"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/num2"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"

                    android:background="@drawable/custom_edit_text"
                    android:hint="@string/zero"
                    android:inputType="numberDecimal"
                    android:nextFocusLeft="@id/num2"
                    android:nextFocusUp="@id/num2"
                    android:textColor="@color/white"
                    android:textColorHint="@color/red"
                    android:textCursorDrawable="@drawable/edit_text_pipe_color"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTexts"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addB"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/touch_button"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/minusB"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/touch_button"
                    android:text="@string/sub"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/leftCopy"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/touch_button"
                    android:text="L"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/rightCopy"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/touch_button"
                    android:text="R"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstRow"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/mulB"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/touch_button"
                    android:text="@string/mul"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/divB"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/touch_button"
                    android:text="@string/div"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/mod"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/touch_button"
                    android:text="%"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/clear"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/touch_button"
                    android:text="c"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="35sp" />
            </LinearLayout>





        </RelativeLayout>
    </ScrollView>
</android.widget.RelativeLayout>
