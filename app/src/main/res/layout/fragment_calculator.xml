<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1"
    android:background="@color/gray"
    android:orientation="vertical"
    android:id="@+id/calculator_frag"
    android:focusableInTouchMode="true"
    tools:context="com.rroycsdev.bingtools.CalculatorFragment">

    <ScrollView
        android:id="@+id/scrollViewCalculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/num1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_marginStart="6dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/zero"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/red"
                android:textCursorDrawable="@drawable/edit_text_pipe_color"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/num2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/num1"
                android:layout_alignBottom="@+id/num1"
                android:layout_alignEnd="@+id/linearLayout"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/zero"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/red"
                android:textCursorDrawable="@drawable/edit_text_pipe_color"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"

                android:background="@drawable/round_layout"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/resultB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:hint="@string/Result"
                    android:textColor="?android:attr/textColorHint"
                    android:textColorHint="@color/red"
                    android:textSize="40sp" />
            </ScrollView>
            </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/firstRow"
            android:layout_marginTop="5dp"
            android:layout_below="@id/num1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/addB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/button"
                android:backgroundTint="@drawable/touch_button"
                android:text="@string/add"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="35sp" />
            <Button
                android:id="@+id/minusB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/button"
                android:backgroundTint="@drawable/touch_button"
                android:text="@string/sub"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="35sp" />
            <Button
                android:id="@+id/leftCopy"
                style="?android:attr/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@drawable/touch_button"
                android:textSize="35sp"
                android:text="L"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/rightCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/button"
                android:backgroundTint="@drawable/touch_button"
                android:textSize="35sp"
                android:text="R"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRow"
            android:gravity="center_horizontal"
            android:layout_below="@id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/mulB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/button"
                android:backgroundTint="@drawable/touch_button"
                android:text="@string/mul"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="35sp" />
            <Button
                android:id="@+id/divB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/button"
                android:backgroundTint="@drawable/touch_button"
                android:text="@string/div"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="35sp" />
            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/button"
                android:backgroundTint="@drawable/touch_button"
                android:text="c"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="35sp" />
            <Button
                android:visibility="invisible"
                android:text="T"
                android:textColor="@color/white"
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/button"
                android:backgroundTint="@drawable/touch_button"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="35sp" />
        </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</android.widget.RelativeLayout>
