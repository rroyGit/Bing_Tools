<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.roy.navapp.CryptoFragment"
    android:background="@color/gray">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/slight_white"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/linearLayout">

        <ProgressBar
            android:id="@+id/proBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Material.Light.ProgressBar.Large"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/etherText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="end"
            android:hint="$0.00"
            android:textAlignment="viewEnd"
            android:textColor="?android:attr/textColorHint"
            android:textColorHint="@color/red"
            android:textSize="40sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="12dp"
        android:layout_marginTop="97dp"
        android:background="@drawable/custom_edit_text"
        android:textCursorDrawable="@drawable/edit_text_pipe_color"

        android:hint="@string/zero"
        android:inputType="numberDecimal"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textColorHint="@color/red"
        android:textSize="25sp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/etherButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ether"
        android:textAllCaps="false"
        android:textColor="?android:attr/textColorHintInverse"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/editT"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp" />

    <TextView
        android:id="@+id/timeText"
        android:fontFamily="serif"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:background="@color/white"
        android:text="Last updated: " />

    <ProgressBar
        android:id="@+id/proBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Material.Light.ProgressBar.Small.Inverse"
        android:layout_alignBottom="@+id/timeText"
        android:layout_alignEnd="@+id/editT"
        android:layout_marginEnd="82dp"
        android:layout_below="@+id/linearLayout" />


</RelativeLayout>
